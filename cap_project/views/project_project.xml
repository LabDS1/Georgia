<odoo>
    <data>
        <record id="view_project_project_form_inherit" model="ir.ui.view">
            <field name="name">project.project.form.inherit</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.edit_project"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_view_invoice']" position="after">
                    <button class="oe_stat_button" icon="fa-pencil-square-o" type="object" name="action_view_vendor_bills">
                        <field name="vendor_bill_ids" widget="statinfo" string="Vendor Bills"/>
                    </button>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
